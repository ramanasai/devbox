      "echo '[character]\nsuccess_symbol = \"[âžœ](bold green)\"\nerror_symbol = \"[âžœ](bold red)\"\n\n[git_branch]\nsymbol = \"ðŸŒ¿ \"\n\n[git_state]\nformat = \"[$state]($style) \"\n\n[directory]\nstyle = \"cyan\"\nread_only = \"ðŸ”’\"\n\n[status]\nformat = \"[$status]($style) \"' > ~/.config/starship/starship.toml",
      "echo 'starship init fish | source' >> ~/.config/fish/config.fish"
